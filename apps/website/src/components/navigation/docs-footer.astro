---
import { ArrowLeft, ArrowRight } from 'lucide-react';
import { HStack, Stack } from '@tacos-ui/styled-system/jsx';
import { Text } from '@tacos-ui/react';
import { getNextPage, getPreviousPage } from '~/lib/page-control';
import { buttonRecipe } from '@tacos-ui/styled-system/recipes';

const prevPage = await getPreviousPage(Astro.params.slug);
const nextPage = await getNextPage(Astro.params.slug);
---

<Stack gap="6">
  <HStack justify="space-between">
    {
      prevPage && (
        <Stack gap="3">
          <Text color="fg.subtle" fontWeight="semibold" textStyle="sm">
            Previous
          </Text>
          <a href={prevPage.href} class={buttonRecipe({ variant: 'link', size: 'lg' })}>
            <ArrowLeft /> {prevPage.name}
          </a>
        </Stack>
      )
    }
    {
      nextPage && (
        <Stack gap="3" marginLeft="auto">
          <Text color="fg.subtle" fontWeight="semibold" textStyle="sm" textAlign="right">
            Next
          </Text>
          <a href={nextPage.href} class={buttonRecipe({ variant: 'link', size: 'lg' })}>
            {nextPage.name} <ArrowRight />
          </a>
        </Stack>
      )
    }
  </HStack>
</Stack>
