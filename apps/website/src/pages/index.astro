---
import { Box, HStack } from '@tacos-ui/styled-system/jsx';

import Navbar from '~/components/navigation/navbar.astro';

import Layout from '../layouts/layout.astro';
import { Hero } from '~/components/hero';
import { css } from '@tacos-ui/styled-system/css';
---

<Layout title="Home" description="An React component library build with Ark & Panda">
  <Box
    height="100vh"
    className={css({
      bgGradient: 'to-br',
      gradientFrom: 'mint.a1',
      gradientTo: 'mint.a3',
    })}
  >
    <HStack as="header">
      <Navbar
        borderRadius="md"
        boxShadow="xs"
        mt={{ base: '6', md: '10' }}
        width={{ base: 'xs', sm: 'sm' }}
      />
    </HStack>
    <Hero />
  </Box>
</Layout>
